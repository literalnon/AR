<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.zrenie20don.MainActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:visibility="invisible"
        android:id="@+id/rUp"
        android:alpha="0.4"
        android:layout_gravity="right|top"
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:background="@drawable/pravy_verkhniy"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:visibility="invisible"
        android:alpha="0.4"
        android:id="@+id/lUp"
        android:layout_gravity="left|top"
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:background="@drawable/levy_verkhniy"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/lDown"
        android:visibility="invisible"
        android:alpha="0.4"
        android:layout_gravity="left|bottom"
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:background="@drawable/levy_nizhniy"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:visibility="invisible"
        android:id="@+id/rDown"
        android:alpha="0.4"
        android:layout_gravity="right|bottom"
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:background="@drawable/pravy_nizhniy"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/logotype"
        android:layout_gravity="center"
        android:src="@drawable/loadinglogo"
        android:scaleType="fitCenter"
        android:contentDescription="@string/logo"
        android:visibility="visible" />

