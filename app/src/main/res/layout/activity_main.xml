        android:scaleType="fitXY"
        app:srcCompat="@drawable/loadinglogo"
        />-->

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/photos_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

