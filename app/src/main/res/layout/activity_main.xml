<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.zrenie20don.MainActivity">

    <ImageView
        android:visibility="invisible"
        android:id="@+id/rUp"
        android:alpha="0.4"
        android:layout_alignParentRight="true"
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:background="@drawable/pravy_verkhniy"/>
    <ImageView
        android:visibility="invisible"
        android:alpha="0.4"
        android:id="@+id/lUp"
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:background="@drawable/levy_verkhniy"/>
    <ImageView
        android:id="@+id/lDown"
        android:visibility="invisible"
        android:alpha="0.4"
        android:layout_alignParentBottom="true"
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:background="@drawable/levy_nizhniy"/>

    <ImageView
        android:visibility="invisible"
        android:id="@+id/rDown"
        android:alpha="0.4"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:background="@drawable/pravy_nizhniy"/>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/logotype"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:adjustViewBounds="true"
        android:background="@drawable/zrenie_main_icon"
        android:contentDescription="@string/logo"
        android:scaleType="matrix"
        android:visibility="invisible" />

    <android.support.v4.view.ViewPager
        android:id="@+id/photos_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

