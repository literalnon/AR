<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:id="@+id/mainLayout"
	xmlns:fab="http://schemas.android.com/tools">

	<com.wikitude.architect.ArchitectView

		android:id="@+id/architectView"
		android:layout_width="0dp"
		android:layout_height="0dp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent">

	</com.wikitude.architect.ArchitectView>

	<FrameLayout
		android:id="@+id/zoomView"
		android:layout_width="0dp"
		android:layout_height="0dp"
		app:layout_constraintBottom_toTopOf="@+id/foto_button"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<com.getbase.floatingactionbutton.FloatingActionsMenu
		android:id="@+id/fab"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="8dp"
		android:layout_marginBottom="8dp"
		android:clickable="true"
		app:fab_addButtonColorNormal="@color/colorAccent"
		app:fab_addButtonPlusIconColor="@android:color/black"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.5"
		app:layout_constraintStart_toEndOf="@+id/foto_button"
		app:srcCompat="@android:drawable/ic_menu_add">

		<com.getbase.floatingactionbutton.FloatingActionButton
			android:id="@+id/webInfoFab"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			app:fab_icon="@drawable/web_150"
			app:fab_colorNormal="@android:color/white"
			app:fab_colorPressed="@android:color/white" />

		<com.getbase.floatingactionbutton.FloatingActionButton
			android:id="@+id/informationFab"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			app:fab_icon="@drawable/info_150"
			app:fab_colorNormal="@android:color/white"
			app:fab_colorPressed="@android:color/white" />

		<com.getbase.floatingactionbutton.FloatingActionButton
			android:id="@+id/geoArSwitcher"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			app:fab_icon="@drawable/geo_ar_150"
			app:fab_colorNormal="@android:color/white"
			app:fab_colorPressed="@android:color/white" />

		<com.getbase.floatingactionbutton.FloatingActionButton
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/switchCameraFab"
			app:fab_colorNormal="@android:color/white"
			app:fab_colorPressed="@android:color/white"
			app:fab_icon="@drawable/cameraflip_150"
			/>

		<com.getbase.floatingactionbutton.FloatingActionButton
			android:id="@+id/flashSwitcher"
			android:background="@android:color/white"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			app:fab_icon="@drawable/flash_150"
			app:fab_colorNormal="@android:color/white"
			app:fab_colorPressed="@android:color/white" />

	</com.getbase.floatingactionbutton.FloatingActionsMenu>

	<android.support.v7.widget.AppCompatImageView
		android:id="@+id/foto_button"
		android:layout_width="64dp"
		android:layout_height="64dp"
		android:layout_alignParentBottom="true"
		android:layout_centerHorizontal="true"
		android:layout_marginStart="16dp"
		android:layout_marginEnd="16dp"
		android:layout_marginBottom="16dp"
		android:background="@drawable/camera_150"
		app:layout_constraintBottom_toBottomOf="@+id/architectView"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintEnd_toStartOf="@+id/fab"
		app:layout_constraintHorizontal_bias="0.5"
		app:layout_constraintStart_toEndOf="@+id/videoButton" />

	<android.support.v7.widget.AppCompatImageView
		android:id="@+id/videoButton"
		android:layout_width="64dp"
		android:layout_height="64dp"
		android:layout_marginEnd="16dp"
		app:layout_constraintBottom_toBottomOf="@+id/foto_button"
		app:layout_constraintEnd_toStartOf="@+id/foto_button"
		app:layout_constraintHorizontal_bias="0.5"
		app:layout_constraintHorizontal_chainStyle="packed"
		app:layout_constraintStart_toEndOf="@+id/architectView"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="@+id/foto_button"
		app:srcCompat="@drawable/video_150" />


	<android.support.v7.widget.AppCompatImageView
		android:id="@+id/rUp"
		android:layout_width="50dp"
		android:layout_height="70dp"
		android:layout_alignParentRight="true"
		android:alpha="0.4"
		android:background="@drawable/pravy_verkhniy"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<android.support.v7.widget.AppCompatImageView
		android:id="@+id/lUp"
		android:layout_width="50dp"
		android:layout_height="70dp"
		android:alpha="0.4"
		android:background="@drawable/levy_verkhniy"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<android.support.v7.widget.AppCompatImageView
		android:id="@+id/lDown"
		android:layout_width="50dp"
		android:layout_height="70dp"
		android:layout_alignParentBottom="true"
		android:alpha="0.4"
		android:background="@drawable/levy_nizhniy"
		app:layout_constraintBottom_toBottomOf="@+id/architectView"
		app:layout_constraintStart_toStartOf="parent" />

	<android.support.v7.widget.AppCompatImageView
		android:id="@+id/rDown"
		android:layout_width="50dp"
		android:layout_height="70dp"
		android:layout_alignParentRight="true"
		android:layout_alignParentBottom="true"
		android:alpha="0.4"
		android:background="@drawable/pravy_nizhniy"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent" />

	<android.support.v7.widget.AppCompatTextView
		android:id="@+id/tvTime"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="32dp"
		android:layout_marginTop="200dp"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>