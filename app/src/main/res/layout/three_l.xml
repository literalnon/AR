<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_marginBottom="50dp"
        android:id="@+id/start"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/ic_radio_button_unchecked_black_24dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/roboto_thin"
            android:gravity="center"
            android:text="Начать!"
            android:textSize="20dp"

            android:textStyle="bold" />

    </FrameLayout>

    <TextView

        android:layout_below="@id/linearLayout2"
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/start"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:fontFamily="@font/roboto"
        android:text="BE UPDATED WITH THE LATEST PROMOTIONS AND IMPORTANT EVENTS OF THE CITY"
        android:textAlignment="center"
        android:textColor="#5F6867"
        android:textSize="20dp" />



    <FrameLayout

        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout2">

        <ImageView
            android:layout_marginRight="60dp"
            android:layout_gravity="center"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/cale"/>
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginLeft="70dp"
            android:background="@drawable/smile" />

    </FrameLayout>

    <TextView
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayout2"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="34dp"
        android:fontFamily="@font/roboto"
        android:text="БУДЬ В КУРСЕ ПОСЛЕДНИХ ПРОМО-АКЦИЙ И ВАЖНЫХ МЕРОПРИЯТИЙ ГОРОДА"
        android:textAlignment="center"
        android:textColor="#5F6867"
        android:textSize="20dp" />

    <LinearLayout
        android:id="@+id/dots"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:alpha="0.5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/default_dot" />
        <ImageView
            android:alpha="0.5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/default_dot" />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/selected_dot" />
    </LinearLayout>




</RelativeLayout>